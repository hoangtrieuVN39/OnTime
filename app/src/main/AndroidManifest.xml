<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAG8XlQgVklvP9ij4BtszizRjD1zAdz2Uc"/>
        <activity
            android:name=".LeavedDetailActivity"
            android:exported="true"
            android:label="ChecinMain"
            android:theme="@style/Theme.Checkin"
            android:foregroundServiceType="location">

        </activity>
        <activity
            android:name=".checkinmain.CheckinMainActivity"
            android:exported="true"
            android:label="ChecinMain"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:foregroundServiceType="location">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".checkinhistory.CheckinHistoryActivity"
            android:exported="true"
            android:label="CheckinHistory"
            android:theme="@style/Theme.Checkin"
            android:foregroundServiceType="location">
        </activity>

    </application>


</manifest>