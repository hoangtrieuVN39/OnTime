<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Checkin"
        tools:targetApi="31">

        <activity android:name="com.example.checkin.login_register.LoginMain"
            android:exported="true">
        </activity>

        <activity android:name="com.example.checkin.login_register.RegisterMain">

        </activity>

        <activity
            android:name="com.example.checkin.checkinmain.CheckinMainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:foregroundServiceType="location"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.checkin.checkinhistory.CheckinHistoryActivity"/>
        <activity android:name="com.example.checkin.leave.formcreate.FormCreateActivity"/>
        <activity android:name="com.example.checkin.leave.formlist.FormListActivity"/>
        <activity android:name="com.example.checkin.leave.formapprove.FormApproveActivity"/>
        <activity android:name="com.example.checkin.leave.formpersonal.FormPersonalActivity"/>

    </application>


</manifest>