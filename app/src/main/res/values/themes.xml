    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_background</item>
    </style>
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.Checkin.Switch" parent="Theme.MaterialComponents">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="trackHeight">24dp</item>
        <item name="android:track">@drawable/switch_track</item>
    </style>

    <style name="Theme.Checkin.Button.Primary" parent="Widget.AppCompat.ActionButton" tools:ignore="ResourceCycle">
        <item name="background">@drawable/buttonprimary</item>
    </style>

    <style name="Theme.Checkin.Button.Outline" parent="Widget.AppCompat.ActionButton" tools:ignore="ResourceCycle">
        <item name="background">@drawable/buttonoutline</item>
    </style>

