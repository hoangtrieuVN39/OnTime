<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Checkin.Chip" parent="Theme.MaterialComponents">
        <item name="chipIconTint">#FEF1B9</item>
        <item name="chipBackgroundColor">@color/choice_chip_background_color</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/choice_chip_stroke_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="Theme.Checkin.ChipGroup" parent="Theme.MaterialComponents">
    <style name="Theme.Checkin" parent="Theme.AppCompat.NoActionBar">

<!--    <style name="Theme.On_Time" parent="android:Theme.Material.Light.NoActionBar" >-->
