<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/work_detail_layout"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="39dp"
                android:layout_height="29dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:textAlignment="center"
                android:text="Chi tiết ngày làm"
                android:textColor="#14161A"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#FBF7EF"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:paddingRight="8dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/work_detail_date_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="T3, 22/07/2024"
                android:textColor="#14161A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/work_detail_num_working_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Số công ngày: "
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0"
                android:textColor="#2E333D"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <!--                <HorizontalScrollView-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content">-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/work_detail_morning_shift_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ca sáng"
                    android:textColor="#14161A"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/morning_highlight"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_orange_light"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/work_detail_afternoon_shift_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ca Chiều"
                    android:textColor="#14161A"
                    android:textSize="14sp" />
                <View
                    android:id="@+id/afternoon_highlight"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_orange_light"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/work_detail_dinner_shift_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ca Tối"
                    android:textColor="#14161A"
                    android:textSize="14sp" />
                <View
                    android:id="@+id/dinner_highlight"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_orange_light"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:id="@+id/work_detail_shift_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Ca sáng"
                android:textColor="#14161A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textAlignment="center"
                android:textColor="#575E72"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/work_detail_shift_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text=" 8:30 - 12:00"
                android:textColor="#575E72"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#FBF7EF"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_launcher_foreground"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ic_locate"
                    android:layout_width="41dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_locate" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa điểm: "
                        android:textColor="#575E72"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/work_detail_location_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Văn phòng Đà Nẵng"
                        android:textColor="#2E333D"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_launcher_foreground"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ic_money"
                    android:layout_width="41dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_money" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Công ghi nhận: "
                        android:textColor="#575E72"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/work_detail_work_record_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 công"
                        android:textColor="#2E333D"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Thông tin chấm công"
            android:textColor="#14161A"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FBF7EF"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Khung Check-in -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Check-in"
                    android:textColor="#2E333D"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="Thời gian:"
                        android:textColor="#575E72"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/work_detail_checkin_time_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="08:55"
                        android:textColor="#2E333D"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/work_detail_checkin_late_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#BB1B1B"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="Địa điểm: "
                        android:textColor="#575E72"
                        android:textSize="14sp" /> <!-- Thêm marginEnd để tạo khoảng cách -->

                    <TextView
                        android:id="@+id/work_detail_checkin_valid_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="Hợp lệ"
                        android:textColor="#14BD4F"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <!-- Khung Check-out -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Check-out"
                    android:textColor="#2E333D"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="Thời gian: "
                        android:textColor="#575E72"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/work_detail_checkout_time_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:text="12:21"
                        android:textColor="#2E333D"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/work_detail_checkout_late_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#BB1B1B"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="Địa điểm: "
                        android:textColor="#575E72"
                        android:textSize="14sp" /> <!-- Thêm marginEnd để tạo khoảng cách -->

                    <TextView
                        android:id="@+id/work_detail_checkout_valid_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text=" Hợp lệ"
                        android:textColor="#14BD4F"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
