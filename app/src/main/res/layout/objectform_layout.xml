<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/titleTypeform_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nghỉ không lương"
        android:textColor="@android:color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/access_time"
            android:layout_gravity="center"
            android:layout_marginRight="10dp">
        </ImageView>
        <TextView
            android:id="@+id/ngaynghi_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày nghỉ:"
            android:textSize="16dp"
            android:layout_gravity="center"> <!--android:alpha="0.5" -->
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat">
        </ImageView>
        <TextView
            android:id="@+id/lydo_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lý do:"
            android:textSize="15dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#EEEFF2"/>

    <TextView
        android:id="@+id/status_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Phê duyệt"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold">
    </TextView>

<!--        <TextView-->
<!--            android:id="@+id/not_approved_txt"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:text="Chưa phê duyệt"-->
<!--            android:layout_weight="1"-->
<!--            android:textColor="#BB1B1B"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="18dp"-->
<!--            android:paddingStart="10dp">-->
<!--        </TextView>-->
    <LinearLayout
        android:id="@+id/recall_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_red"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon_recall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:src="@drawable/baseline_history_24"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/recall_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Thu hồi"
            android:textAllCaps="false"
            android:textColor="#BB1B1B"
            android:textSize="18dp"
            android:textStyle="bold">
        </Button>
    </LinearLayout>


</LinearLayout>