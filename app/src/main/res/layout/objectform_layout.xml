<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/titleTypeform_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nghỉ không lương"
        android:textColor="@android:color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/clock2"
            android:layout_gravity="center"
            android:layout_marginRight="10dp">
        </ImageView>
        <TextView
            android:id="@+id/ngaynghi_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày nghỉ:"
            android:textSize="16dp"
            android:layout_gravity="center"> <!--android:alpha="0.5" -->
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/reason_icon">
        </ImageView>
        <TextView
            android:id="@+id/lydo_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lý do:"
            android:textSize="15dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#EEEFF2"/>

    <LinearLayout
        android:id="@+id/eventAprove_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/status_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Phê duyệt"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

</LinearLayout>