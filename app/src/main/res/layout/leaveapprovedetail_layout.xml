<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/backDt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_back"
            android:padding="10dp"
            android:layout_gravity="center"
            android:contentDescription="Back" />
        <TextView
            android:id="@+id/titleDetailForm_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết đơn từ"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/black">
        </TextView>
    </LinearLayout>
    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/r6kz3epiafr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="23dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nkl_txt"
                android:textColor="#14161A"
                android:textSize="20sp"
                android:layout_marginBottom="29dp"
                android:layout_marginStart="18dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Nghỉ không lương"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tgad_txt"
                android:textColor="#14161A"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="17dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Thời gian áp dụng"
                android:textStyle="bold"
                />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rc_color"
                android:paddingVertical="9dp"
                android:paddingHorizontal="13dp"
                android:layout_marginBottom="27dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/timetext_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="11dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tgbd_txt"
                        android:textColor="#575E72"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Thời gian bắt đầu"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/tgkt_text"
                        android:textColor="#575E72"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Thời gian kết thúc"
                        />
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/timeDetail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/timeStart_txt"
                        android:textColor="#2E333D"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="16/07/2024 08:00"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/timeEnd_txt"
                        android:textColor="#2E333D"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="16/07/2024 08:00"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/ttc_txt"
                android:textColor="#14161A"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="17dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Thông tin công"
                android:textStyle="bold"
                />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/information_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rc_color"
                android:padding="13dp"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/infor1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/cdk_txt"
                        android:textColor="#575E72"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="150dp"
                        android:text="Công đăng ký:"
                        />
                    <TextView
                        android:id="@+id/dtcdk_txt"
                        android:textColor="#2E333D"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="3"
                        />
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/infor2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="13dp"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/infor3_layput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ld_txt"
                        android:textColor="#575E72"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="150dp"
                        android:text="Lý do:"
                        />
                    <TextView
                        android:id="@+id/dtld_txt"
                        android:textColor="#2E333D"
                        android:textSize="16sp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="159dp"
                        android:text="Em xin phép nghỉ hôm nay ạ"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/lpd_txt"
                android:textColor="#14161A"
                android:textSize="20sp"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="18dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Luồng phê duyệt"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/flowApproverdt_lv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="8dp">
                </ListView>

                <LinearLayout
                    android:id="@+id/footer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:layout_marginTop="11dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/Pending_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="18dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/radio_button_checked"/>

                        <TextView
                            android:id="@+id/namePending_txt"
                            android:textColor="#2E333D"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Đang phê duyệt"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Reject Layout -->
                    <LinearLayout
                        android:id="@+id/endReject_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="18dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/x_icon"/>

                        <TextView
                            android:id="@+id/nameEndReject_txt"
                            android:textColor="#BB1B1B"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Đã từ chối"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Done Layout -->
                    <LinearLayout
                        android:id="@+id/lineDone_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="18dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/checkdone_icon"/>

                        <TextView
                            android:id="@+id/nameDone_txt"
                            android:textColor="#D9AF03"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Đã phê duyệt"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/Choice_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_corner_buttonblack"
            android:gravity="center"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_reject"/>

            <Button
                android:id="@+id/REject_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingEnd="10dp"
                android:text="Từ chối"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_corner_yellow"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:src="@drawable/baseline_check_24"/>
            <Button
                android:id="@+id/Approver_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phê duyệt"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:textAllCaps="false"
                android:background="@null"
                android:textSize="16dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Rejected_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_background"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:visibility="visible">

        <Button
            android:id="@+id/Rejected_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại bỏ"
            android:textAllCaps="false"
            android:textColor="#575E72"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Approved_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_background"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:visibility="visible">


        <Button
            android:id="@+id/Approved_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng ý"
            android:textAllCaps="false"
            android:textColor="#D9AF03"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@null"/>
    </LinearLayout>

</LinearLayout>