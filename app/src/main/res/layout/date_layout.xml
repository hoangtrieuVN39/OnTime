        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="T2, 21/07/2024"
            android:textColor="#14161A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rb13x5knsofb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:text="Số công ngày:"
            android:textColor="#575E72"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#2E333D"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r0c4tx830jb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rp9yscuq8otk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên ca"
            android:textColor="#575E72"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rejutxsmyweo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Giờ check-in"
            android:textColor="#575E72"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rrr3408r6wjd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Giờ check-out"
            android:textColor="#575E72"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E7ED"
        android:orientation="horizontal">


    <com.example.checkin.ShowAllListView
        android:id="@+id/shift_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rg6hgilkirog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rrsr653a04sk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="Ca chiều"
            android:textColor="#2E333D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/r1pz9f9fez97"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="57dp"
            android:text="12:55:00"
            android:textColor="#2E333D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rtkk3bea8yt"
            android:layout_width="wrap_content"
