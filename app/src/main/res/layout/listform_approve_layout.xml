<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/nav_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/back_button"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="Back" />
            <TextView
                android:id="@+id/titleFormApprove_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn từ"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_weight="8"
                android:textColor="@android:color/black">
            </TextView>
            <ImageButton
                android:id="@+id/button_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/filter_icon"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="Back"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <Button
                android:id="@+id/button_canhan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cá nhân"
                android:textSize="15dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:textAllCaps="false">
            </Button>
            <Button
                android:id="@+id/button_pheduyet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Phê duyệt"
                android:textSize="15dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:textAllCaps="false">
            </Button>
            <Button
                android:id="@+id/button_danhsach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Danh sách"
                android:textSize="15dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:textAllCaps="false">
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/nav_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <Spinner
                android:id="@+id/approveStatus_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/approveMonth_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_marginBottom="16dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FBF7EF"
            android:padding="10dp">

            <ListView
                android:id="@+id/formApprove_lv"
                android:layout_width="match_parent"
                android:layout_height="700dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/clock">
            </ImageView>

            <Button
                android:id="@+id/button_chamcong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Chấm công"
                android:textAllCaps="false"
                android:textSize="15dp">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/history">

            </ImageView>

            <Button
                android:id="@+id/button_lichsu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Lịch sử"
                android:textAllCaps="false"
                android:textSize="15dp">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/form">

            </ImageView>

            <Button
                android:id="@+id/button_dontu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Đơn từ"
                android:textAllCaps="false"
                android:textSize="15dp">

            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>