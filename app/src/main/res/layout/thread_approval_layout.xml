<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/rtzntofjkrw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="18dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/approvalIcon1"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginEnd="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_infor_waiting" />
        <TextView
            android:id="@+id/name_txt"
            android:textColor="#2E333D"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Trịnh Trần Phương Tuấn"
            />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rduje1xflyio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="27dp"
        android:orientation="horizontal">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rpnv7x32ynir"
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:background="#C2C7D1"
            android:layout_marginEnd="61dp"
            android:orientation="vertical">
        </LinearLayout>
        <ImageView
            android:id="@+id/approvalIconChild1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_infor_waiting"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/statusLeave1_txt"
            android:textColor="#575E72"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Chờ phê duyệt"
            />
    </LinearLayout>
</LinearLayout>