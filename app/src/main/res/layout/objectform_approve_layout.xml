<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tenloaidontuApprove_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nghỉ không lương"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_margin="5dp">

    </TextView>

    <TextView
        android:id="@+id/ngaynghiApprove_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày nghỉ:"
        android:textSize="20dp"
        android:layout_margin="5dp">
    </TextView>

    <TextView
        android:id="@+id/lydoApprove_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Lý do:"
        android:textSize="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/nguoipheduyet_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Trịnh Trần Phương Thắng"
            android:textSize="20dp">
        </TextView>
        <TextView
            android:id="@+id/ngaypheduyet_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="13/07/2024">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/reject_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_black"
            android:text="Từ chối"
            android:textSize="20dp"
            android:textAllCaps="false">
        </Button>
        <Button
            android:id="@+id/approver_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/br_button"
            android:text="Phê duyệt"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textAllCaps="false">
        </Button>
    </LinearLayout>

</LinearLayout>