<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tenloaidontuApprove_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nghỉ không lương"
        android:textColor="@android:color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_margin="5dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/access_time"
            android:layout_gravity="center"
            android:layout_marginRight="10dp">
        </ImageView>
        <TextView
            android:id="@+id/ngaynghiApprover_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày nghỉ:"
            android:textSize="16dp"
            android:layout_gravity="center"> <!--android:alpha="0.5" -->
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat">
        </ImageView>
        <TextView
            android:id="@+id/lydoApprover_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lý do:"
            android:textSize="15dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/nguoipheduyet_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Trịnh Trần Phương Thắng"
            android:textSize="18dp">
        </TextView>
        <TextView
            android:id="@+id/ngaytaodon_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="13/07/2024">
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#EEEFF2"/>

    <TextView
        android:id="@+id/statusApprover_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Phê duyệt"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold">
    </TextView>


    <LinearLayout
        android:id="@+id/recallApprover_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_corner_buttonblack"
            android:gravity="center"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_reject"/>

            <Button
                android:id="@+id/reject_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingEnd="10dp"
                android:text="Từ chối"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_corner_yellow"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:src="@drawable/baseline_check_24"/>
            <Button
                android:id="@+id/approver_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phê duyệt"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:textAllCaps="false"
                android:background="@null"
                android:textSize="16dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>