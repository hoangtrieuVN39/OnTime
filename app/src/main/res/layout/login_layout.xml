<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:fontFamily="@font/roboto">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_logo"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/logintitle_tedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập vào tài khoản"
        android:textColor="#2E333D"
        android:textStyle="bold"
        android:textSize="16sp" />

    <com.example.checkin.component.MainCompTedit
        android:id="@+id/email_tedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_mail"
        android:drawablePadding="10dp"
        android:drawableTint="#575E72"
        android:padding="15dp"
        app:editTextType="1"
        android:focusable="true"
        android:clickable="true"
        android:imeOptions="actionDone" />

    <com.example.checkin.component.MainCompTedit
        android:id="@+id/password_tedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:drawableTint="#575E72"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="15dp"
        app:editTextType="1" />

    <com.example.checkin.component.MainCompBtn
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:text="Đăng nhập"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="15dp"
        android:focusable="true"
        android:clickable="true"
        android:imeOptions="actionDone"
        app:btnType="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản?"
            android:textColor="#8891A5"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textColor="#4367FC"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
