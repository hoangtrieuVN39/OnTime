<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                </shape>
            </item>
            <item android:gravity="top|center_horizontal">
                <shape android:shape="rectangle">
                    <size android:height="3dp" />
                    <solid android:color="#FBCC08" />
                    <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                </shape>
            </item>
            <item android:gravity="bottom|center_horizontal">
                <shape android:shape="rectangle">
                    <size android:height="1dp" />
                    <solid android:color="#FEF1B9" />
                    <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>